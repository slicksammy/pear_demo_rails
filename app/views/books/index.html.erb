<h1>Listing Books</h1>

<table class="table table-striped table-hover table-bordered">
  <thead>
    <tr>
      <th class="text-center">Title</th>
      <th class="text-center">Author</th>
      <th class="text-center">Publication Date</th>
      <th class="text-center">ISBN</th>
      <th class="text-center"></th>
      <th class="text-center"></th>
      <th class="text-center"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="text-nowrap"><%= book.title %></td>
        <td class="text-nowrap"><%= book.author %></td>
        <td class="text-nowrap"><%= book.publication_date %></td>
        <td class="text-nowrap"><%= book.isbn %></td>
        <td class="text-center"><%= link_to 'Show', book %></td>
        <td class="text-center"><%= link_to 'Edit', edit_book_path(book) %></td>
        <td class="text-center"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

