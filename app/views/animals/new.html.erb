<div class='container' style='background-color: lightgreen;'>
  <h1>New Animal</h1>

  <%= form_with(model: @animal, url: animals_path, class: 'form') do |form| %>
    <div class='form-group'>
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= form.label :species %>
      <%= form.select :species, ['Mammal', 'Lizard', 'Other'], {}, class: 'form-control' %>
    </div>

    <div class='form-group'>
      <%= form.label :age %>
      <%= form.number_field :age, class: 'form-control' %>
    </div>

    <%= form.submit 'Create Animal', class: 'btn btn-primary' %>
  <% end %>
</div>
