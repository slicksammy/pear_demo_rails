<h1>New Credit Card</h1>

<%= form_with model: @credit_card, local: true do |form| %>
  <div class="form-group">
    <%= form.label :card_number %>
    <%= form.text_field :card_number, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :expiration_date %>
    <%= form.date_field :expiration_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :cvc_code %>
    <%= form.number_field :cvc_code, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :balance %>
    <%= form.number_field :balance, step: '0.01', class: 'form-control' %>
  </div>

  <%= form.submit 'Create Credit Card', class: 'btn btn-primary' %>
<% end %>
